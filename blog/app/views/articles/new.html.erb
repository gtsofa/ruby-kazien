<%= form_with scope: :article, url: articles_path, local: true do |f| %>
  <% if @article.errors.any? %>
      <div id="error_explanation">
          <ul>
              <% @article.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
          </ul>
      </div>
      <% end %>
      
    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </p>
   
    <p>
      <%= f.label :text %><br>
      <%= f.text_area :text %>
    </p>
   
    <p>
      <%= f.submit %>
    </p>
  <% end %>

  <%= link_to 'Back ', articles_path %>